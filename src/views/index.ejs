<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/nav') %>

      <!-- Header -->
      <%- include('./partials/header') %>
        <!-- Page content -->
        <div class="ps-content">
          <!-- About Section -->
       
          <%- include('./partials/about') %>
          <hr />
          <!-- Menu Section -->
          <div class="ps-row ps-padding-64" id="menu">
            <div class="ps-col l6 ps-padding-large">
              <h1 class="ps-center">Nuentro Menu</h1>
              <br />
              <% platos.forEach(plato=> { %>
                <a href="/detalle/<%= plato.id %>"><h4><%=plato.title %></h4></a>
                <p class="ps-text-grey">
                 <%= plato.description %> U$S <%= plato.price.toFixed(2) %>
                </p>
                <% }) %>
                 
            </div>

            <div class="ps-col l6 ps-padding-large ps-img-menu">
              <img src="/images/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
            </div>
          </div>

          <!-- Footer -->
          <%- include('./partials/footer') %>

        </div>
  </body>

</html>